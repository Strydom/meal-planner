{% extends "suggestions.twig" %}

{% block display %}

{% for food in foods %}

<div class="food_item">
    <img src="{{food.img}}">
    
    <h3>{{food.name}}</h3>
    
    <a type="button" class="btn btn-lg btn-success" href="/suggestions/swipe">
        <span class="glyphicon glyphicon-ok"></span> Like
    </a>
    <a type="button" class="btn btn-lg btn-danger" href="/suggestions/swipe/">
        <span class="glyphicon glyphicon-remove"></span> Dislike
    </a>
</div>

{% endfor %}

{% endblock %}